# ─── Admin ─────────────────────────────────────────────────────────
# Email of the admin user (auto-approved on first registration)
ADMIN_EMAIL=admin@dar.com

# ─── Email Domain Restriction ─────────────────────────────────────
# Only emails ending with @{domain} can register
ALLOWED_EMAIL_DOMAIN=dar.com

# ─── Security ─────────────────────────────────────────────────────
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-key-here

# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-min-32-chars

# ─── Session ──────────────────────────────────────────────────────
SESSION_EXPIRY_HOURS=72

# ─── Redis ────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_USER=
REDIS_PASS=1234

# ─── Database ─────────────────────────────────────────────────────
DB_PATH=./data/jira_app.db

# ─── App ──────────────────────────────────────────────────────────
DEBUG=false
